<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:foregroundGravity="center"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/ingrediantView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp"
            android:background="@color/white"
            android:layout_below="@+id/pdImage">


        <androidx.cardview.widget.CardView
            android:id="@+id/ingrediant_View"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ingrediantImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/applogo" />

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/ingrediantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingrediant_View"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/pulpdisplay_mediumd"
            android:lineHeight="@dimen/_12sdp"
            android:text="Fresh Avocados"
            android:textColor="@color/txttitle"
            android:textSize="@dimen/_10sdp" />



</RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>